<?xml version="1.0" encoding="UTF-8"?>

  <!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.wolen.randomday.user.dao.UserDAO">
  
  	<select id="selectUser" parameterType="map"
  	 resultType="com.wolen.randomday.user.model.User">
  		SELECT
  			`id`
  			, `loginId`
  			, `password`
  			, `name`
  			, `birth`
  			, `sex`
  			, `email`
  			, `imagePath`
  			, `createdAt`
  			, `updatedAt`
  		FROM
  			`user`
  		WHERE
  			`loginId` = #{loginId}
  	</select>
  	
  	<insert id="insertUser" parameterType="map">
  		INSERT INTO `user`
  		(
  		  	`id`
  			, `loginId`
  			, `password`
  			, `name`
  			, `birth`
  			, `sex`
  			, `email`
  			, `createdAt`
  			, `updatedAt`
  		)
  		VALUE
  		(
  		  	`id`
  			, #{loginId}
  			, #{password}
  			, #{name}
  			, #{birth}
  			, #{sex}
  			, #{email}
  			, now()
  			, now()
  		)
  		
  	</insert>
  	
  	<select id="selectUserByLoginId" parameterType="String"
  		resultType="int">
  		SELECT
  		 count(1)
  		FROM
  			`user`
  		WHERE
  			`loginId` = #{loginId} 
  	</select>
  	
  	<select id="selectUserByUserIdAndPass" parameterType="map"
  		resultType="com.wolen.randomday.user.model.User">
  		SELECT
  			 `id`
  			, `loginId`
  			, `password`
  			, `name`
  			, `birth`
  			, `sex`
  			, `email`
  			, `imagePath`
  			, `createdAt`
  			, `updatedAt`
  		FROM
  			`user`
  		WHERE
  			`id` = #{userId} AND `password` = #{password}
  	</select>
  	
  	<update id="updateNewPassById" parameterType="map">
  		UPDATE `user`
  		SET
  			`password` = #{password}
  		WHERE `id` = #{userId}
  	</update>
  	
  	
  	<update id="updateImage" parameterType="map">
  		UPDATE `user`
  		SET
  			`imagePath` = #{imagePath}
  		WHERE `id` = #{userId}	
  	</update>
  	
  	<delete id="deleteImage" parameterType="int">
  		DELETE FROM
  			`user`
  		WHERE
  			`id` = #{userId}
  	</delete>
  	
  	<select id="selectUserByuserId" parameterType="int"
  		resultType="com.wolen.randomday.user.model.User">
  		 SELECT
  			 `id`
  			, `loginId`
  			, `password`
  			, `name`
  			, `birth`
  			, `sex`
  			, `email`
  			, `imagePath`
  			, `createdAt`
  			, `updatedAt`
  		FROM
  			`user`
  		WHERE
  			`id`= #{userId}
  	</select>
  
  
  </mapper>